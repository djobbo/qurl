{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"outDir": "dist",
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"downlevelIteration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
